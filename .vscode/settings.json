{
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "html",
    "typescript": "typescript",
    "typescriptreact": "html"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "tw",
    "headerClassName"
  ],
  "tailwindCSS.experimental.classRegex": [
    "(?:className|class)\\s*[:=]\\s*`([^`]*)`",
    "(?:className|class)\\s*[:=]\\s*\"([^\"]*)\"",
    "(?:className|class)\\s*[:=]\\s*'([^']*)'"
  ]
}
